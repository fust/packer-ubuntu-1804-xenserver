{
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'ansible' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/ansible.sh"
    },
    {
      "type": "shell",
      "execute_command": "echo 'ansible' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/setup.sh"
    },
    {
      "type": "ansible-local",
      "playbook_file": "ansible/main.yml",
      "galaxy_file": "requirements.yml"
    },
    {
      "type": "shell",
      "execute_command": "echo 'ansible' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/cleanup.sh"
    }
  ],
  "builders": [
    {
      "type": "xenserver-iso",
      "remote_host": "{{user `remote_host`}}",
      "remote_username": "{{user `remote_user`}}",
      "remote_password": "{{user `remote_password`}}!",

      "boot_command": [
        "<esc><wait5>",
        "<esc><wait5>",
        "<enter><wait5>",
        "/install/vmlinuz<wait>",
        " auto<wait>",
        " console-setup/ask_detect=false<wait>",
        " console-setup/layoutcode=us<wait>",
        " console-setup/modelcode=pc105<wait>",
        " debconf/frontend=noninteractive<wait>",
        " debian-installer=en_US<wait>",
        " fb=false<wait>",
        " initrd=/install/initrd.gz<wait>",
        " kbd-chooser/method=us<wait>",
        " keyboard-configuration/layout=USA<wait>",
        " keyboard-configuration/variant=USA<wait>",
        " locale=en_US<wait>",
        " netcfg/get_domain=vm<wait>",
        " netcfg/get_hostname=vagrant<wait>",
        " grub-installer/bootdev=/dev/xvda<wait>",
        " noapic<wait>",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg<wait>",
        " -- <wait>",
        "<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 20480,
      "http_directory": "http",
      "iso_urls": [
        "iso/ubuntu-18.04.3-server-amd64.iso",
        "http://cdimage.ubuntu.com/ubuntu/releases/bionic/release/ubuntu-18.04.3-server-amd64.iso"
      ],
      "iso_checksum_type": "sha256",
      "iso_checksum": "7d8e0055d663bffa27c1718685085626cb59346e7626ba3d3f476322271f573e",
      "vm_other_config": {
          "conversionvm":"true"
      },
      "tools_iso_name": "guest-tools.iso",
      "network_names": [          
          "Pool-wide network associated with eth0"
      ],
      "output_directory": "packer-ubuntu-18.04-x86_64-xenserver",
      "shutdown_command": "echo 'ansible'|sudo -S shutdown -P now",
      "ssh_username": "ansible",
      "ssh_password": "ansible",
      "ssh_wait_timeout": "10000s",
      "vm_name": "packer-ubuntu-18.04-x86_64",
      "vm_description": "Build time: {{isotime}}",
      "keep_vm": "on_success",
      "format": "none",
      "convert": true
    }
  ]
}
